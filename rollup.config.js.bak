// rollup.config.dev.js
import resolve from '@rollup/plugin-node-resolve';
import terser from '@rollup/plugin-terser';
import babel from '@rollup/plugin-babel';
import css from 'rollup-plugin-css-only';
import serve from 'rollup-plugin-serve';
import livereload from 'rollup-plugin-livereload';
import copy from 'rollup-plugin-copy';
import analyze from 'rollup-plugin-analyzer';

const devMode = process.env.NODE_ENV === 'development';
const input = ['src/xibo-layout-renderer.ts'];

export default {
  input,
  external: [
    'jquery',
    'html5Preloader'
  ],
  output: [{
    name: 'XiboLayoutRenderer',
    file: 'build/xibo-layout-renderer.bundle.js',
    format: 'umd',
    sourcemap: devMode,
    globals: {
      jquery: 'jQuery',
    },
    extend: true,
  }],
  plugins: [
    css({
      // all `*.css` files in src directory
      input: ['src/*.css', 'src/*/*.css'],
      output: 'styles.css',
    }),
    copy({
      targets: [{
        // Copy HTML files from src to build
        src: 'public/*',
        dest: 'build',
      }, {
        // Copy assets to build/assets
        src: 'assets/*',
        dest: 'build/assets',
      }],
    }),
    serve({
      // Launch in browser (default: false)
      open: true,
      // Page to navigate to when opening the browser.
      openPage: '/index.html',
      // Folder to serve files from
      contentBase: 'build',
      // Options used in setting up server
      host: 'localhost',
      port: 8088,
      headers: {
        'Access-Control-Allow-Origin': '*',
      },
    }),
    // Automatic page refresh after any changes
    livereload('build'),
    resolve({
      moduleDirectories: ['node_modules'],
    }),
    babel({
      babelHelpers: 'bundled',
    }),
    analyze({
      summaryOnly: true,
    }),
    !devMode && terser(),
  ],
}
