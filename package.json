{
  "name": "xibo-layout-renderer",
  "version": "1.0.0",
  "description": "Xibo layout renderer is a shared library that performs rendering of given layout from sources (e.g. CMS Preview, Linux Player, etc.)",
  "main": "dist/xibo-layout-renderer.cjs.js",
  "module": "dist/xibo-layout-renderer.esm.js",
  "types": "dist/xibo-layout-renderer.d.ts",
  "type": "module",
  "scripts": {
    "watch": "rimraf dist && rollup --config rollup.config.dev.js -w",
    "build": "rimraf dist && rollup --config rollup.config.dev.js",
    "dev": "rimraf dist && rollup --config rollup.config.dev.ts --configPlugin @rollup/plugin-typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/xibosignage/xibo-layout-renderer.git"
  },
  "files": [
    "xibo-layout-renderer.min.js",
    "xibo-layout-renderer.min.js.map",
    "xibo-layout-renderer.d.ts"
  ],
  "author": "Xibo Signage Ltd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xibosignage/xibo-layout-renderer/issues"
  },
  "homepage": "https://github.com/xibosignage/xibo-layout-renderer#readme",
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.12",
    "axios": "^1.6.8",
    "nanoevents": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "rimraf": "^5.0.5",
    "rollup": "^4.18.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3"
  }
